<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/blue_light</item> <!-- Custom drawable -->
        <item name="android:textColor">#FFFFFF</item> <!-- White text -->
        <item name="android:padding">10dp</item> <!-- Padding -->
        <item name="android:textSize">16sp</item> <!-- Text size -->

    </style>

    <!-- Custom Checkbox Style -->
    <style name="CustomCheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/blue_light</item> <!-- Tint for checkbox -->
        <item name="android:textColor">#000000</item> <!-- Text color -->
    </style>


</resources>
